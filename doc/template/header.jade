header#header
  if config.github || config.menu
    button#menu-open: i.mdi.mdi-menu

  div#logo: a(href="{{base}}/")!=config.header_title

  if config.github || config.menu
    #header-nav
      button#menu-close: i.mdi.mdi-close

      if config.github
        div#get-on-github: a(href=config.github, target="_blank")
          i.mdi.mdi-github-circle
          span Get on GitHub

      if config.menu
        nav#menu
          ul
            each label, link in config.menu
              li: a(href=link)=label